@model MyHotelApp.ViewModels.ReservationFormViewModel
@{
    ViewBag.Title = "EditReservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Reservation for @Model.GuestAccount.Name</h2>

@using (Html.BeginForm("SaveReservation", "Employee"))
{
    <div class="form-group">
        @Html.LabelFor(Model => Model.Reservation.CheckIn)
        @Html.EditorFor(Model => Model.Reservation.CheckIn, new { htmlAttributes = new { @class = "datepicker" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(Model => Model.Reservation.CheckOut)
        @Html.EditorFor(Model => Model.Reservation.CheckOut, new { htmlAttributes = new { @class = "datepicker" } })
    </div>

    @*<div class="form-group">
            @Html.LabelFor(Model => Model.CheckOutMonth)
            @Html.TextBoxFor(Model => Model.CheckOutMonth, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(Model => Model.CheckOutDay)
            @Html.TextBoxFor(Model => Model.CheckOutDay, new { @class = "form-control" })
        </div>*@

    <div class="form-group">
        @Html.LabelFor(Model => Model.RoomTypes)
        @Html.DropDownListFor(Model => Model.Reservation.RoomTypeId, new SelectList(Model.RoomTypes, "Id", "Type"), "Select Desired Room Type", new { @class = "form-control" })
    </div>



    <button type="submit" class="btn btn-primary">Save</button>

}


<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "mm-dd-yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "2018:2020"
            });

        });
    </script>
}

