@model MyHotelApp.ViewModels.SearchReservationsViewModel


<h2>See Reservations For a Given Date</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("SeeReservations", "Employee"))
    {
        <div class="form-group">
            @Html.LabelFor(Model => Model.CheckInDate)
            @Html.EditorFor(Model => Model.CheckInDate, new { htmlAttributes = new { @class = "datepicker" } })
        </div>


        <button type="submit" class="btn btn-primary">See All Reservations</button>

}


        <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />


        @section scripts{
            <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
            <script>
                $(function () {
                    $(".datepicker").datepicker({
                        dateFormat: "mm-dd-yy",
                        changeMonth: true,
                        changeYear: true,
                        yearRange: "2018:2020"
                    });

                });
            </script>
        }
    </div>
    <div class=" col-md-6 form-group">
        @using (Html.BeginForm("SearchReservationsByDate", "Employee"))
        {

            @Html.LabelFor(Model => Model.Name)
            @Html.EditorFor(Model => Model.Name, new  { @class = "form-control" })
            }


        <button type="submit" class="btn btn-primary">See All Reservations</button>
        }
    </div>
</div>